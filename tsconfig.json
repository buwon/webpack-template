{
  "compilerOptions": {
    "target": "ES2019",
    "lib": ["DOM","ESNext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "rootDir": "/",
    "paths": {
      "~~/*": ["*"],
      "~/*": ["src/*"]
    },
  },
  "compileOnSave": true,
  "include": ["src/**/*"],
  "exclude": ["test/**/*"]
}
